{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "allowUnreachableCode": false,
    "noEmitOnError": true,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "webpack"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "node_modules/vue-tsx-support/enable-check.d.ts",
    "node_modules/vue-tsx-support/options/allow-unkown-props.d.ts",
    "node_modules/vue-tsx-support/options/allow-element-unkown-attrs.d.ts",
    "node_modules/vue-tsx-support/options/enable-vue-router.d.ts",
    "node_modules/vue-tsx-support/options/enable-html-attrs.d.ts",
    "src/**/*.ts",
    // "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    // "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/components.tsx/**/*.tsx"
  ]
}